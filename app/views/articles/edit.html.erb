<h1>This is Edite Article page</h1>

<% if @article.errors.any? %>
  <h2>These are preventing from Editing</h2>
  <ul><% @article.errors.full_messages.each do |error| %>
     <li><%=error%></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </p>
 <%= f.submit %>
<% end %> </br>

<%= link_to 'Back to Articles', articles_path %>
